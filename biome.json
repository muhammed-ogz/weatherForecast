{
    "$schema": "https://biomejs.dev/schemas/1.9.4/schema.json",
    "files": {
        "ignore": ["**/dist/", "**/node_modules/"],
        "ignoreUnknown": true,
        "maxSize": 10240
    },
    "formatter": {
        "attributePosition": "auto",
        "bracketSpacing": true,
        "enabled": false,
        "formatWithErrors": false,
        "indentStyle": "space",
        "indentWidth": 4,
        "lineEnding": "lf",
        "lineWidth": 120,
        "useEditorconfig": true
    },
    "javascript": {
        "formatter": {
            "arrowParentheses": "always",
            "attributePosition": "auto",
            "bracketSameLine": true,
            "bracketSpacing": true,
            "enabled": true,
            "jsxQuoteStyle": "double",
            "lineEnding": "lf",
            "quoteProperties": "asNeeded",
            "quoteStyle": "double",
            "semicolons": "always",
            "trailingCommas": "all"
        }
    },
    "linter": {
        "enabled": false
    },
    "organizeImports": {
        "enabled": true
    },
    "vcs": {
        "clientKind": "git",
        "defaultBranch": "main",
        "enabled": true,
        "root": ".",
        "useIgnoreFile": true
    }
}
